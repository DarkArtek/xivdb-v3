{% extends "account/index.twig"  %}

{% set page = 'account_index' %}

{% block subbody %}

    <h2>Sign-In Account</h2>

    <p>You are currently logged in via: <strong class="text-warning">{{ auth.user.sso|title }}</strong></p>

    <br>

    <table class="table table-bordered table-striped table-dark">
        <tbody>
            <tr>
                <td width=30%"><strong>SSO</strong></td>
                <td>{{ auth.user.sso|title }}</td>
            </tr>
            <tr>
                <td><strong>Username</strong></td>
                <td>{{ auth.user.username|title }}</td>
            </tr>
            <tr>
                <td><strong>Email</strong></td>
                <td>{{ auth.user.email }}</td>
            </tr>
            <tr>
                <td><strong>Avatar</strong></td>
                <td>
                    <img src="{{ auth.user.avatar }}" style="border-radius: 5px;" height="128">
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}
